{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:best-practices",
        "helpers:pinGitHubActionDigests",
        "disableDependencyDashboard",
        "schedule:weekly"
    ],
    "minimumReleaseAge": "7 days",
    "ignorePaths": [
        "**/tests/**"
    ],
    "lockFileMaintenance": {
        "enabled": true,
        "schedule": [
            "before 5am on monday"
        ]
    },
    "packageRules": [
        {
            "groupName": "Testing Framework",
            "matchDatasources": [
                "pypi"
            ],
            "matchPackageNames": [
                "pytest",
                "/^pytest-/"
            ]
        },
        {
            "groupName": "Type Checking & Validation",
            "matchDatasources": [
                "pypi"
            ],
            "matchPackageNames": [
                "pydantic",
                "pydantic-core"
            ]
        },
        {
            "groupName": "Dev Tools",
            "matchDatasources": [
                "pypi"
            ],
            "matchPackageNames": [
                "ruff",
                "poethepoet"
            ]
        }
    ]
}